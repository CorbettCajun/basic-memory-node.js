# Basic Memory Environment Configuration

# Home directory for storing Markdown files
BASIC_MEMORY_HOME=~/basic-memory

# Project Selection
# Specify a project to override the default configuration
BASIC_MEMORY_PROJECT=main

# Database Configuration
BASIC_MEMORY_DB_PATH=./data/memory.sqlite
BASIC_MEMORY_DB_POOL_SIZE=10
BASIC_MEMORY_DB_TIMEOUT=5000

# MCP Server configuration
# Port is now dynamically assigned (set to 0)
BASIC_MEMORY_PORT=0
BASIC_MEMORY_HOST=localhost

# Logging Configuration
BASIC_MEMORY_LOG_LEVEL=INFO
BASIC_MEMORY_LOG_PATH=./logs
BASIC_MEMORY_LOG_MAX_SIZE=10M
BASIC_MEMORY_LOG_MAX_FILES=5

# Environment Configuration
BASIC_MEMORY_ENV=dev

# Sync Delay (in milliseconds)
BASIC_MEMORY_SYNC_DELAY=500

# Performance Tuning
BASIC_MEMORY_CACHE_SIZE=1000
BASIC_MEMORY_QUERY_TIMEOUT=3000
BASIC_MEMORY_MAX_CONNECTIONS=20

# Security Settings
BASIC_MEMORY_ENCRYPTION_ENABLED=true
BASIC_MEMORY_ENCRYPTION_KEY=generate_a_secure_random_key_here
BASIC_MEMORY_ALLOW_EXTERNAL_IMPORTS=false

# MCP (Model Context Protocol) Settings
BASIC_MEMORY_MCP_ENABLED=true
BASIC_MEMORY_MCP_ENDPOINT=https://mcp.modelcontextprotocol.com
BASIC_MEMORY_MCP_API_KEY=your_mcp_api_key

# Development Environment
NODE_ENV=development
DEBUG=basic-memory:*

# Experimental Features
BASIC_MEMORY_EXPERIMENTAL_SYNC=false
BASIC_MEMORY_TELEMETRY_ENABLED=false

# File synchronization
SYNC_TO_FILES=true
# Set to "true" to enable syncing entities to files, "false" to disable

# SQL Logging (for debugging)
SQL_LOGGING=false
# Set to "true" to log SQL statements, "false" to disable
